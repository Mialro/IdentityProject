@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Create Role";
}

<div class="container">

    <h1 class="display-4">Create New Role</h1>
    <hr />

    <form method="post" asp-action="CreateRole" asp-controller="Roles">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Id" class="col-md-2" hidden></label>
            <div class="col-md-6">
                <input asp-for="Id" class="form-control" hidden/>
                <span asp-validation-for="Id"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-2">
                    <button class="btn btn-success" type="submit">Create Role</button>
                </div>
                <div class="col-2">
                    <a class="btn btn-success" asp-action="Index">Back to Roles</a>
                </div>
            </div>
        </div>

    </form>

</div>