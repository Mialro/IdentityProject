@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles List";
}

@if (ViewBag.IsSuccess == true)
{
    <div class="text-success">
        Role Created Successfully
    </div>
}

<div class="row">
    <div class="col">
        <h1>List Of Roles</h1>
    </div>
    <div class="col-2">
        <a class="btn btn-link btn-primary" asp-action="CreateRole" asp-controller="Roles">Create Role</a>
    </div>
</div>

<table class="table table-striped border">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a class="btn btn-link btn-secondary" asp-action="UpdateRole" asp-controller="Roles" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-link btn-danger" asp-action="DeleteRole" asp-controller="Roles" asp-route-id="@item.Id">Delete</a>
            </td>

        </tr>
        }
    </tbody>
</table>

