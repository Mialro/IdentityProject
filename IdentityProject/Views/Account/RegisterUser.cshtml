@model RegisterViewModel
@{
    ViewData["Title"] = "RegisterUser";
}

<h1>RegisterUser</h1>

<div class="container">

    <h1 class="display-4">Create New User</h1>
    <hr />

    <form method="post" asp-action="RegisterUser" asp-controller="Account">

        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="Name" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="Password" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class="col-md-4"></label>
            <div class="col-md-6">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <button class="btn btn-success" type="submit">Register</button>
            </div>
        </div>

    </form>

</div>
