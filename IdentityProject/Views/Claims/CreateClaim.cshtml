@model ClaimModel

@{
    ViewData["Title"] = "Create Claim";
}

<div class="container">

    <h1 class="display-4">Create New Claim</h1>
    <hr />

    <form method="post" asp-action="CreateClaim" asp-controller="Claims">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="ClaimType" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="ClaimType" class="form-control" />
                <span asp-validation-for="ClaimType"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ClaimValue" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="ClaimValue" class="form-control"/>
                <span asp-validation-for="ClaimValue"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-2">
                    <button class="btn btn-success" type="submit">Create Claim</button>
                </div>
                <div class="col-2">
                    <a class="btn btn-success" asp-action="Index">Back to Claims</a>
                </div>
            </div>
        </div>

    </form>

</div>
