@model IEnumerable<System.Security.Claims.Claim>


<div>
    <div class="row">
        <div class="col-sm-10">
            <h1>Claims</h1>
        </div>
        <div class="col-sm-2 mt-2">
            <a class="btn btn-success" asp-action="CreateClaim">Create Claim</a>
        </div>
    </div>
</div>
<hr />

<div class="container">
    <table class="table table-striped border">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Issuer</th>
                <th>Type</th>
                <th>Value</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Subject</td>
                    <td>@item.Issuer</td>
                    <td>@item.Type</td>
                    <td>@item.Value</td>
                    <td>
                        <form asp-action="DeleteClaim" asp-controller="Claims" method="post">
                            <input name="claimValues" value="@item.Issuer; @item.Type; @item.Value" hidden/>
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

